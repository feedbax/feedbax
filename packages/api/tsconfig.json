{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "./src",

    "paths": {},

    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ]
  },
  "include": [
    "src",
  ]
}