{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": ".",
    "baseUrl": "./src",

    "paths": {
      "@/*": ["./*"],
    },

    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ]
  },

  "exclude": [
    "node_modules",
    "browser",
    "node"
  ],

  "include": [
    "src",
  ]
}