{
  "compilerOptions": {
    "target": "es5",

    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "jsx": "preserve",

    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],
  },

  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],

  "exclude": [
    "node_modules"
  ]
}
